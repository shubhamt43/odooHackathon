<!DOCTYPE html>
<html>
<head>
  <title>Dashboard - <%= user.name %></title>
  <style>

    .navbar {
  background-color: #4f46e5;
  color: white;
  padding: 10px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}

.navbar a {
  color: white;
  text-decoration: none;
  margin-left: 20px;
  transition: 0.2s;
}

.navbar a:hover {
  text-decoration: underline;
}

.navbar .logo {
  font-size: 20px;
}

    body {
      font-family: Arial, sans-serif;
      background: #f3f4f6;
      margin: 0;
      padding: 0;
    }

   .profile-header {
  background: linear-gradient(to right, #4f46e5, #6366f1);
  color: white;
  padding: 30px 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 15px;
}
@media (min-width: 600px) {
  .profile-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
}


    .profile-info {
      display: flex;
      align-items: center;
      gap: 20px;
      flex: 1 1 100%;
    }

    .profile-info img {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      object-fit: cover;
      border: 3px solid white;
    }

    .details h2 {
      margin: 0;
      font-size: 22px;
    }

    .badge-public {
      background-color: #d1d5db;
      color: #111827;
      border-radius: 10px;
      padding: 3px 10px;
      font-size: 12px;
      margin-left: 10px;
    }

    .edit-btn {
      background-color: white;
      color: #4f46e5;
      padding: 8px 15px;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
      margin-top: 10px;
    }

    .content {
      background: white;
      margin: 20px auto;
      padding: 20px;
      border-radius: 10px;
      max-width: 700px;
    }

    .section-title {
      font-size: 18px;
      margin-bottom: 10px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 5px;
    }

    .skills {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 20px;
    }

    .skills > div {
      flex: 1 1 100%;
    }

    .skills ul {
      list-style: none;
      padding: 0;
    }

    .skills li {
      background: #f1f5f9;
      padding: 6px 12px;
      border-radius: 5px;
      margin-bottom: 6px;
    }

    .availability span {
      background-color: #f87171;
      color: white;
      padding: 5px 10px;
      border-radius: 15px;
      margin-right: 10px;
      font-size: 14px;
    }

    .stats {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      margin-top: 20px;
      text-align: center;
      gap: 15px;
    }

    .stats div {
      flex: 1 1 100%;
    }

    .stats strong {
      display: block;
      font-size: 22px;
      color: #4f46e5;
    }

    .edit-form {
      margin-top: 30px;
      padding: 20px;
      background: #f9fafb;
      border: 1px solid #ccc;
      border-radius: 10px;
      display: none;
    }

    .edit-form input, .edit-form select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .edit-form label {
      font-weight: bold;
    }

    .edit-form button {
      background-color: #4f46e5;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    @media (min-width: 600px) {
      .skills > div {
        flex: 1 1 45%;
      }

      .stats div {
        flex: 1 1 30%;
      }

      .edit-btn {
        margin-top: 0;
      }

      .profile-info {
        flex: 1 1 auto;
      }
    }
  </style>
</head>
<body>
<nav class="navbar">
  <div class="nav-left">
    <a href="/" class="logo">SkillSwap</a>
  </div>
  <div class="nav-right">
    <a href="/">Home</a>
    <a href="/logout">Logout</a>
  </div>
</nav>

  <div class="profile-header">
    <div class="profile-info">
      <img src="<%= user.profilePhoto || '/uploads/default.png' %>" alt="Profile Picture">
      <div class="details">
        <h2><%= user.name %>
          <% if (user.isPublic) { %>
            <span class="badge-public">Public</span>
          <% } %>
        </h2>
        <p><%= user.location %> ‚Ä¢ ‚≠ê 4.8 (12 swaps)</p>
      </div>
    </div>
    <button class="edit-btn" onclick="toggleEdit()">Edit Profile</button>
  </div>

  <div class="content">
    <!-- Skills & Availability Display -->
    <div class="skills">
      <div>
        <h3 class="section-title">üß† Skills I Offer</h3>
        <ul>
          <% user.skillsOffered.forEach(skill => { %>
            <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
      <div>
        <h3 class="section-title">üìò Skills I Want to Learn</h3>
        <ul>
          <% user.skillsWanted.forEach(skill => { %>
            <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="availability" style="margin-top: 20px;">
      <h3 class="section-title">‚è∞ Availability</h3>
      <% if (user.availability && user.availability.includes('weekends')) { %>
  <span>Weekends</span>
<% } %>
<% if (user.availability && user.availability.includes('evenings')) { %>
  <span>Evenings</span>
<% } %>

    </div>

    <div class="stats">
      <div>
        <strong>12</strong>
        Completed Swaps
      </div>
      <div>
        <strong>4.8</strong>
        Average Rating
      </div>
      <div>
        <strong><%= new Date(user.createdAt).toLocaleString('default', { month: 'short', year: 'numeric' }) %></strong>
        Member Since
      </div>
    </div>

    <!-- üîÅ Hidden Edit Form -->
    <form class="edit-form" id="editForm" action="/dashboard" method="POST" enctype="multipart/form-data">
      <h3>Edit Profile</h3>
      <label>Name:</label>
      <input type="text" name="name" value="<%= user.name %>">

      <label>Location:</label>
      <input type="text" name="location" value="<%= user.location %>">

      <label>Skills Offered (comma-separated):</label>
      <input type="text" name="skillsOffered" value="<%= user.skillsOffered.join(', ') %>">

      <label>Skills Wanted (comma-separated):</label>
      <input type="text" name="skillsWanted" value="<%= user.skillsWanted.join(', ') %>">

      <label>Availability:</label>
      <select name="availability">
        <option value="">Select</option>
        <option value="weekends" <%= user.availability === 'weekends' ? 'selected' : '' %>>Weekends</option>
        <option value="evenings" <%= user.availability === 'evenings' ? 'selected' : '' %>>Evenings</option>
      </select>

      <label>Profile Photo:</label>
      <input type="file" name="profilePhoto" accept="image/*">

      <label>
        <input type="checkbox" name="isPublic" <%= user.isPublic ? 'checked' : '' %>>Make my profile public
      </label>
       <hr>
      <button type="submit">Save Changes</button>
    </form>
  </div>

  <script>
    function toggleEdit() {
      const form = document.getElementById('editForm');
      form.style.display = form.style.display === 'none' || form.style.display === '' ? 'block' : 'none';
    }
  </script>

</body>
</html>


