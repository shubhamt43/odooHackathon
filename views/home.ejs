<!DOCTYPE html>
<html>
<head>
  <title>Skill Swap Platform - Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9fafb;
      margin: 0;
      padding: 0;
    }

    /* --- Navbar --- */
    .navbar {
      background-color: #4f46e5;
      color: white;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar .logo {
      font-size: 20px;
      font-weight: bold;
    }

    .navbar a {
      color: white;
      margin-left: 15px;
      text-decoration: none;
      font-weight: 500;
    }

    .navbar a:hover {
      text-decoration: underline;
    }

    /* --- Container --- */
    .container {
      max-width: 960px;
      margin: auto;
      padding: 20px;
    }

    /* --- Search Bar --- */
    .search-form {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-bottom: 30px;
      align-items: center;
    }

    .search-form select,
    .search-form input,
    .search-form button {
      padding: 10px;
      font-size: 14px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .search-form button {
      background-color: #4f46e5;
      color: white;
      border: none;
      cursor: pointer;
    }

    .search-form button:hover {
      background-color: #4338ca;
    }

    /* --- Profile Card --- */
    .profile-card {
      background: white;
      display: flex;
      gap: 20px;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      align-items: center;
    }
    .uname{
      text-decoration: none;
      color:black;
    }
    .profile-card img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #ddd;
    }

    .profile-info {
      flex: 1;
    }

    .profile-info h3 {
      margin: 0;
      color: #4f46e5;
    }

    .profile-info p {
      margin: 6px 0;
      color: #333;
    }

    .request-btn {
      background-color: #10b981;
      color: white;
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
    }

    .request-btn:hover {
      background-color: #059669;
    }

    .login-link {
      color: #4f46e5;
      font-weight: bold;
      margin-top: 10px;
      display: inline-block;
    }

    /* --- Pagination --- */
    .pagination {
      text-align: center;
      margin-top: 30px;
    }

    .pagination a, .pagination strong {
      margin: 0 5px;
      text-decoration: none;
      color: #000000;
      /* font-weight: bold; */
    }

    /* --- Responsive --- */
    @media (max-width: 600px) {
      .profile-card {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .search-form {
        flex-direction: column;
        align-items: stretch;
      }

      .profile-info {
        text-align: center;
      }
    }
  </style>
</head>
<body>

  <!-- ðŸ”— Navbar -->
  <div class="navbar">
    <div class="logo">SkillSwap</div>
    <div>
     
      <% if (user) { %>
  <a href="/dashboard" style="margin-left: 15px;">
    <img 
      src="<%= user.profilePhoto || '/uploads/default.png' %>" 
      alt="Profile" 
      style="width: 35px; height: 35px; border-radius: 50%; object-fit: cover; vertical-align: middle;"
    >
  </a>
  <!-- <a href="/logout" style="margin-left: 10px;">Logout</a> -->
<% } else { %>
  <a href="/login">Login</a>
<% } %>

    </div>
  </div>

  <!-- ðŸ” Search & Content -->
  <div class="container">
    <form class="search-form" method="get" action="/">
      <label>Availability:</label>
      <select name="availability">
        <option value="">All</option>
        <option value="weekends" <%= availability === 'weekends' ? 'selected' : '' %>>Weekends</option>
        <option value="evenings" <%= availability === 'evenings' ? 'selected' : '' %>>Evenings</option>
        <option value="evenings" <%= availability === 'evenings' ? 'selected' : '' %>>weekdays</option>
        
      </select>
      <input type="text" name="search" placeholder="Search skills..." value="<%= search %>">
      <button type="submit">Search</button>
    </form>

    <!-- ðŸ‘¤ User Loop -->
    <% users.forEach(function(u) { %>
      <div class="profile-card">
        <img src="<%= u.profilePhoto || '/uploads/default.png' %>" alt="Profile">
        <div class="profile-info">
          <h3><a href="/profile/<%= u._id %>" class="uname"><%= u.name %></a></h3>
          <p><strong>Skills Offered:</strong> <%= u.skillsOffered.join(', ') %></p>
          <p><strong>Skills Wanted:</strong> <%= u.skillsWanted.join(', ') %></p>
          <p><strong>Availability:</strong> <%= u.availability %></p>

          <% if (user) { %>
            <form action="/request/<%= u._id %>" method="get">
              <button class="request-btn" type="submit">Request</button>
            </form>
          <% } else { %>
            <a href="/login" class="login-link">Login to Request</a>
          <% } %>
        </div>
      </div>
    <% }); %>

    <!-- ðŸ“„ Pagination -->
    <% if (totalPages > 1) { %>
      <div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="/?page=<%= currentPage - 1 %>&availability=<%= availability %>&search=<%= search %>">&lt; Prev</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <% if (i === currentPage) { %>
            <strong><%= i %></strong>
          <% } else { %>
            <a href="/?page=<%= i %>&availability=<%= availability %>&search=<%= search %>"><%= i %></a>
          <% } %>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/?page=<%= currentPage + 1 %>&availability=<%= availability %>&search=<%= search %>">Next &gt;</a>
        <% } %>
      </div>
    <% } %>
  </div>
<hr>
  <footer style="background-color: #4f46e5; color: white; text-align: center; padding: 20px 0; margin-top: 40px;">
  <p>&copy; <%= new Date().getFullYear() %> SkillSwap. All rights reserved.</p>
  <p style="font-size: 14px;">Built for learning and connecting talents worldwide.</p>
</footer>
</body>
</html>
